<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-class>StatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NameServlet</servlet-name>
        <servlet-class>NameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NameServlet</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PostServlet</servlet-name>
        <servlet-class>PostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PageServlet</servlet-name>
        <jsp-file>/WEB-INF/index.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>PageServlet</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Test1Servlet</servlet-name>
        <servlet-class>Test1Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Test1Servlet</servlet-name>
        <url-pattern>/test1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Test2Servlet</servlet-name>
        <servlet-class>Test2Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Test2Servlet</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>FilterServlet</filter-name>
        <filter-class>FilterServlet</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterServlet</filter-name>
        <servlet-name>*</servlet-name>
    </filter-mapping>
</web-app>